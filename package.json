{
  "name": "@nestjs-shared/probot",
  "version": "0.0.0-development",
  "description": "Nest - modern, fast, powerful node.js web framework (@probot)",
  "author": "Akshay Singh",
  "license": "MIT",
  "url": "https://github.com/nestjs-shared/probot#readme",
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "commit": "git add . && cz",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test:integration": "jest --config ./tests/jest-e2e.json --runInBand",
    "prerelease": "npm run build",
    "release": "semantic-release"
  },
  "dependencies": {
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-angular": "13.1.0",
    "@nestjs/common": "8.0.7",
    "@nestjs/core": "8.0.7",
    "@nestjs/platform-express": "8.0.7",
    "@nestjs/testing": "8.0.7",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/cron": "1.7.2",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.19",
    "@types/sinon": "10.0.4",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.24.2",
    "husky": "7.0.2",
    "jest": "27.2.2",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "semantic-release": "^18.0.0",
    "sinon": "11.1.2",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.10.11 || ^7.0.0 || ^8.0.0",
    "@nestjs/core": "^7.0.0 || ^8.0.0",
    "reflect-metadata": "^0.1.12"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nestjs-shared/probot"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "docs"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
